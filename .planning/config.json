{
  "mode": "yolo",
  "depth": "quick",
  "parallelization": true,
  "commit_docs": true,
  "pr_workflow": true,
  "model_profile": "quality",
  "workflow": {
    "research": true,
    "plan_check": true,
    "verifier": true
  },
  "github": {
    "enabled": true,
    "issue_mode": "auto"
  },
  "workflows": {
    "execute-phase": {
      "post_task_command": "npm run build:plugin && npm test"
    },
    "verify-work": {
      "extra_verification_commands": [
        "npm run build:plugin",
        "npm test",
        "npm run test:smoke",
        "npm run test:affected",
        "bash -c 'STALE=$(find skills -name \"SKILL.md\" -newer docs/diagrams/FLOWS.md 2>/dev/null | head -1); [ -n \"$STALE\" ] && echo \"WARNING: docs/diagrams/FLOWS.md may be stale (skills changed since last docs update)\" && exit 1 || echo \"docs/ up to date\"'"
      ]
    },
    "complete-milestone": {
      "version_files": [
        "package.json",
        ".claude-plugin/plugin.json"
      ]
    }
  }
}