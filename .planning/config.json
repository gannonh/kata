{
  "mode": "yolo",
  "depth": "quick",
  "parallelization": true,
  "commit_docs": true,
  "pr_workflow": true,
  "model_profile": "balanced",
  "workflow": {
    "research": false,
    "plan_check": false,
    "verifier": false
  },
  "github": {
    "enabled": true,
    "issueMode": "auto"
  },
  "workflows": {
    "execute-phase": {
      "post_task_command": "npm run build:plugin && npm test"
    },
    "verify-work": {
      "extra_verification_commands": [
        "npm run build:plugin",
        "npm test",
        "npm run test:smoke"
      ]
    },
    "complete-milestone": {
      "version_files": [
        "package.json",
        ".claude-plugin/plugin.json"
      ]
    }
  }
}
