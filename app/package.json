{
  "name": "kata-orchestrator-desktop-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Electron + React shell for Kata Orchestrator desktop UI",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:web": "vite --config vite.config.web.ts",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.web.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ci:local": "npm run lint && npm run test:coverage && npm run test:e2e:quality-gate && npm run test:e2e:full",
    "test:e2e": "npm run test:e2e:full",
    "test:e2e:full": "npm run build && playwright test --grep @uat",
    "test:e2e:ci": "npm run build && playwright test --grep @ci",
    "test:e2e:quality-gate": "npm run build && playwright test --grep @quality-gate"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron": "^40.6.0",
    "framer-motion": "^12.34.3",
    "lucide-react": "^0.575.0",
    "radix-ui": "^1.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.5.0",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "electron-vite": "^5.0.0",
    "jsdom": "^25.0.0",
    "tailwindcss": "^4.0.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.0"
  }
}
