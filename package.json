{
  "name": "@gannonh/kata",
  "version": "1.12.0",
  "private": true,
  "type": "module",
  "description": "Spec-driven development framework for Claude Code.",
  "workspaces": [
    "app"
  ],
  "scripts": {
    "dev": "npm run -w app dev",
    "test": "node --test --test-reporter spec ./tests/build.test.js ./tests/migration-validation.test.js",
    "test:coverage": "npm run test:coverage:core && npm run test:app:coverage",
    "test:coverage:core": "node --test --experimental-test-coverage --test-reporter spec ./tests/build.test.js ./tests/migration-validation.test.js",
    "test:app": "npm run -w app test",
    "test:app:coverage": "npm run -w app test:coverage",
    "test:app:e2e": "npm run -w app test:e2e",
    "test:app:e2e:ci": "npm run -w app test:e2e:ci",
    "test:app:quality-gate": "npm run -w app lint && npm run -w app test:e2e:quality-gate",
    "test:smoke": "node --test --test-reporter spec ./tests/smoke.test.js",
    "test:scripts": "node --test --test-reporter spec ./tests/scripts/*.test.js",
    "test:artifacts": "node --test --test-reporter spec ./tests/artifact-validation.test.js",
    "test:all": "node --test --test-reporter spec ./tests/build.test.js ./tests/smoke.test.js ./tests/artifact-validation.test.js ./tests/scripts/*.test.js",
    "test:skills": "node --test --test-reporter spec --test-reporter-destination stdout --test-reporter junit --test-reporter-destination junit.xml tests/skills/*.test.js",
    "test:skill": "node --test --test-reporter spec",
    "test:affected": "node -e \"import('./tests/harness/affected.js').then(m => console.log(m.getAffectedTestFiles().join(' ')))\" | xargs -r node --test",
    "build": "node scripts/build.js plugin",
    "build:plugin": "node scripts/build.js plugin",
    "build:skills-sh": "node scripts/build.js skills-sh"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "meta-prompting",
    "context-engineering",
    "spec-driven-development"
  ],
  "author": "gannonh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gannonh/kata.git"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
